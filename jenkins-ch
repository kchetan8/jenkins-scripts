pipeline {
    agent any
 stages {
     stage('Git Checkout') {
        steps {
            git credentialsId: 'Githubpersonal8', url: 'https://github.com/kchetan8/jenkins-demo-api.git' 
        }
    }
    stage('Maven Build') {
        steps {
            bat '''mvn clean install -DskipMunitTests'''
        }
    }
    stage('Cloudhub Deployment') {
        steps {

            withCredentials([usernamePassword(credentialsId: 'Anypoint14', passwordVariable: 'mule-password', usernameVariable: 'mule-username')]) {
    bat '''mvn package deploy -DmuleDeploy -DskipMunitTests -Dusername=%mule-username% -Dpassword=%mule-password% -Dapp.name=%app-name% -Dregion=%region% -Denvironment=%environment%'''
}
            
        }
    }
    stage('Deploy approval'){
        steps {
        input message: 'Deploy to UAT ?', ok: 'Approve', parameters: [booleanParam('approverName')], submitterParameter: 'params'
        bat 'echo %approverName%'
        bat 'echo params.approverName'
        }
        
    }
 }
}

